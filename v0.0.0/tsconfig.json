{
  "compilerOptions": {
    "outDir": "./",
    "noImplicitAny": false,
    "declaration": true,
    "target": "es5",
    "lib": ["ES7", "ES6", "ES5"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}